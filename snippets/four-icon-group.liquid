<style>
  .four-icon-group .icon-group-container-ss {
    display: flex;
    justify-content: space-between;
  }
  .four-icon-group .icon-group-container-ss .icon-wrapper {
    {% comment %} width: 23%; {% endcomment %}
    flex: 1;
    text-align: center;
    display: flex;
    {% comment %} justify-content: center; {% endcomment %}
    flex-direction: column;
    padding: 1%;
  }
  .four-icon-group .icon-group-container-ss .icon {
    margin-bottom: 3px;
    display: flex;
    justify-content: center;
  }
  .four-icon-group .icon-group-container-ss .icon img {
    height: 40px;
    margin-bottom: 3px;
  }
  .four-icon-group .icon-group-container-ss .icon-text h4 {
    font-size: 12px;
    font-family: "Gelica Bk" !important;
    padding-bottom: 10px;
  }
  .four-icon-group .icon-group-container-ss .icon-text p {
    font-size: 12px;
    {% comment %} font-family: "Gelica Lt" !important; {% endcomment %}
  }
  @media (max-width: 768px) {
    .four-icon-group .icon-group-container-ss .icon img {
      height: 35px;
    }
    .four-icon-group .icon-group-container-ss .icon-text h4 {
      font-size: 10px;
      padding-bottom: 8px;
    }
    .four-icon-group .icon-group-container-ss .icon-text p {
      font-size: 10px;
    }
  }
</style>
