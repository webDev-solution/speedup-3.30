{%- liquid
  assign items = collections
  assign block_collections = section.blocks | where: "type", "collection"
  if block_collections.size > 0
    assign using_blocks = true
    assign items = block_collections
  endif
-%}

{%- paginate collections by 6 -%}
<section id="collection-home-goodprotein" style="background-color: {{ section.settings.main_background_color }};" class="relative text-scheme-text bg-scheme-background py-section-vertical-spacing overflow-hidden {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %}" data-color-scheme="{{ section.settings.color_scheme | default: 'primary' }}" >
  <div class="space-y-double-section-vertical-spacing">
    {% for item in items %}
      {%- liquid
        assign collection = item
        assign image_shape = section.settings.image_shape
        if using_blocks
          assign collection = collections[item.settings.collection]
          if item.settings.image_shape != 'same_as_section'
            assign image_shape = item.settings.image_shape
          else
            assign image_shape = settings.product_tile_media_shape
          endif
        endif
      -%}
      <style>
        .center-saturn {
          display: flex;
          align-items: center;
          justify-content: center;
        }
      </style>
      <div class="holiday-main-list-collections section-content relative z-10 {% unless section.settings.layout == 'carousel' %}px-section max-w-site mx-auto{% endunless %}">

          {% if request.path contains '/fr' %}
            <div class="center-saturn">
              <img src="{{ item.settings.title_fr | img_url: '500x500'  }}" class="logo-image-saturn" />
            </div>
          {% else %}
            <div class="center-saturn">
              <img src="{{ item.settings.title_en | img_url: '500x500'  }}" class="logo-image-saturn" />
            </div>
          {% endif %}

        {%- if collection.description != blank and section.settings.show_collection_description -%}
          <div class="mt-5 rte max-w-lg mx-auto text-center">
            {{ collection.description }}
          </div>
        {%- endif -%}
        {%- render 'holiday-featured-collection'
          item: section,
          collection: collection,
          index: forloop.index,
          image_shape: image_shape,
          discount_badge: section.settings.discount_badge,
          discounted_percent: section.settings.discounted_percent,
          row: item.settings.row,
          product_number_c: item.settings.product_number_c,
          title_en: item.settings.title_en,
          title_fr: item.settings.title_fr
        -%}
      </div>
    {% endfor %}
  </div>

  {%- unless using_blocks -%}
    {%- if paginate.pages > 1 -%}
    <div class="px-section max-w-site mx-auto pt-section-vertical-spacing">
      {%- render 'pagination', paginate: paginate, anchor: '' -%}
    </div>
    {%- endif -%}
  {%- endunless %}
  
  {%- liquid
    for block in section.blocks
      case block.type
        when 'background_shape'
          render 'block-background-shape' with block: block, section: section
        when 'background_pattern'
          render 'block-background-pattern' with block: block, section: section, scheme: section.settings.color_scheme
        when 'shape_divider'
          render 'block-shape-divider' with block: block, section: section
      endcase
    endfor
  -%}
  <style>
    
    @media (min-width: 550px) and (max-width: 750px) {
      .lg\:grid-cols-5 {
        grid-template-columns: repeat(2, minmax(0, 1fr)) !important;
      }
    }
    @media (max-width: 700px) {
      .center-saturn {
        padding: 0 10vw 0 10vw;
      }
    }
    @media (min-width: 800px) and (max-width: 1250px) {
      .product-count-4,
      .product-count-3 {
        left: 0px !important;
      }
    }
  </style>
</section>
{%- endpaginate -%}

{%- assign stickers = section.blocks | where: "type", "sticker" -%}
{%- liquid
  for sticker in stickers
    render 'block-sticker' with block: sticker, section: section
  endfor
-%}

