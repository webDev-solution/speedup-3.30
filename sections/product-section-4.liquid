{% style %}
  #shopify-section-{{section.id}} [data-section-type="pdp-section-4"] {
    --color-pdp-section-4: {{section.settings.color_bg}};
  }
{% endstyle %}

<div data-section-type="pdp-section-4" class="product-section product-section-4 product-section-padding">
  <div class="page-width">
    <h3>{{ section.settings.heading }}</h3>
    <div class="inner_product-section-4">
      {% for block in section.blocks %}
      <div class="product-section-4-row align-items-center inner-product-section {% if block.settings.row_position =='row_reverse' %} reverse-product-secction {% endif %}">
         <div class="image-product-section-4 half-product">
            {{ block.settings.image | image_url: width: 2048 | image_tag: loading: 'lazy' }}
         </div>
         <div class="content-product-section-4 half-product">
           <div class="product-section-box">
              <h4>{{ block.settings.heading }}</h4>
              <h5>{{ block.settings.content }}</h5>
             <h6>{{ block.settings.name }}</h6>
           </div>
         </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Product Real love",
    "settings": [
      {
        "type":"textarea",
        "id":"heading",
        "label":"Heading"
      },
      {
        "type": "header",
        "content": "color_schema"
      },
      {
        "type": "color",
        "id": "color_bg",
        "label": "Background color",
        "default": "#fcf7e4"
      }
    ],
    "blocks":[
      {
        "type":"image_box",
        "name":"Image Box",
        "settings":[
          {
            "type":"select",
            "id":"row_position",
            "options":[
              {
                "value":"row_normal",
                "label":"In Row"
              },
              {
                "value":"row_reverse",
                "label":"Reverse"
              }
            ],
            "default":"row_reverse",
            "label":"Row Position"
          },
          {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
          },
          {
            "type":"inline_richtext",
            "id":"heading",
            "label":"Heading"
          },
          {
            "type":"inline_richtext",
            "id":"content",
            "label":"Content"
          },
          {
            "type":"text",
            "id":"name",
            "label":"Name"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"Product Section 4",
        "category":"product"
      }
    ]
  }
{% endschema %}

