
{{'custom-product-section-7.css' | asset_url | stylesheet_tag }}  {% comment %} scss {% endcomment %}

{% style %}
  #shopify-section-{{section.id}} [data-section-type="pdp-section-7"] {
    --color-pdp-section-7: {{section.settings.color_bg}};
    --color-pdp-section-7-icon: {{section.settings.color_icon}};
  }
{% endstyle %}

<div data-section-type="pdp-section-7"  class="product-section product-section-7 product-section-padding">
  <div class="page-width">
    <div class="reviews_wrap">
      {% if section.settings.subtitle %}
      <h5>{{ section.settings.subtitle }}</h5>
      {% endif  %}
      <h3>{{ section.settings.heading }}</h3>
      <h4>{{ section.settings.subheading }}</h4>
      <div class="product-section-7-carousel">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'image' %}
            <div class="product-section-box img_wrap7">
              <figure>
                 <img src="{{ block.settings.image | image_url: width: 400  }}" alt="" width="" height="" />
              </figure>
              <h5>{{ block.settings.heading }}</h5>
            </div>
          {% endcase %}
           
        {% endfor %}
      </div>
    </div>    
  </div>
</div>

{%- liquid
  assign shape_dividers = section.blocks | where: "type", "shape_divider"
  for shape_divider in shape_dividers
    render 'block-shape-divider' with block: shape_divider, section: section
  endfor
-%}

