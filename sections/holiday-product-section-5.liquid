
{{'custom-product-section-5.css' | asset_url | stylesheet_tag }}  {% comment %} scss {% endcomment %}

{% style %}
  #shopify-section-{{section.id}} [data-section-type="pdp-section-5"] {
    --color-pdp-section-5: {{section.settings.background_gradient}};
    --color-pdp-section-5-icon: {{section.settings.background_gradient_icon}};
  }
{% endstyle %}
<div data-section-type="pdp-section-5" class="product-section product-section-5 product-section-padding" id="nutritional_facts">
  <div class="page-width">
    <div class="product-section-5-carousel product-section-5-carousel-saturn">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'carousel' %}
            <div class="product-section-box">
              <!-- <h5>{{ block.settings.heading }}</h5> -->
              <figure>
                {% if request.path contains '/fr' %}
                  <img src="{{ block.settings.image_fr | image_url: height: 200  }}" alt="" width="" height="">
                {% else %}
                  <img src="{{ block.settings.image | image_url: height: 200  }}" alt="" width="" height="">
                {% endif %}
                
              </figure>
              
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  @media (max-width: 550px) {
    .product-section-5-carousel-saturn {
      flex-wrap: wrap;
    }
    .product-section-5-carousel-saturn .product-section-box {
      width: 33%;
      margin: 0px !important;
      padding: 0px 10px;
    }
    .product-section-5-carousel-saturn .product-section-box figure {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .product-section-5-carousel-saturn .product-section-box img {
      margin-top: 0px;
      margin-bottom: 0px;
    }
  }
</style>

{% liquid
  assign shape_dividers = section.blocks | where: "type", "shape_divider"
  for shape_divider in shape_dividers
    render 'block-shape-divider' with block: shape_divider, section: section
  endfor
%}
 
