{% style %}
  #shopify-section-{{section.id}} [data-section-type="pdp-section-5"] {
    --color-pdp-section-5: {{section.settings.background_color}};
    --color-pdp-section-5-icon: {{section.settings.background_color_icon}};
  }
  #nutritional_facts-2 .product-section-5-carousel {
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
    padding: 0 5%;
  }
  #nutritional_facts-2 .product-section-5-carousel .product-section-box .image-wrapper-ss {
    width: 100px;
    height: 100px;
    margin-bottom: 5px;
  }
  #nutritional_facts-2 .product-section-5-carousel .product-section-box {
    max-width: 16%;
    margin: 0px !important;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  #nutritional_facts-2 .product-section-5-carousel .product-section-box img {
    object-fit: scale-down !important;
  }
  #nutritional_facts-2 .product-section-5-carousel .product-section-box h5 {
    color: #0066CC;
    text-align: center;
    font-size: 24px;
  }
  #shopify-section-{{section.id}} .product-section-padding {
    padding-bottom: 4%;
    padding-top: 8% !important;
  }
  @media (max-width: 1024px) {
    #nutritional_facts-2 {
      padding-top: 3% !important;
      padding-bottom: 3% !important;
    }
    #nutritional_facts-2 .product-section-5-carousel .product-section-box .image-wrapper-ss {
      width: 60px;
      height: 60px;
    }
    #nutritional_facts-2 .product-section-5-carousel .product-section-box h5 {
      font-size: 10px;
    }
    #nutritional_facts-2 .product-section-5-carousel {
      margin-bottom: 0px !important;
    }
  }
  @media (max-width: 768px) {
    #nutritional_facts-2 {
      padding-top: 3% !important;
      padding-bottom: 3% !important;
    }
    #nutritional_facts-2 .product-section-5-carousel .product-section-box .image-wrapper-ss {
      width: 40px;
      height: 40px;
    }
    #nutritional_facts-2 .product-section-5-carousel .product-section-box h5 {
      font-size: 10px;
    }
    #nutritional_facts-2 .product-section-5-carousel {
      margin-bottom: 0px !important;
    }
  }
{% endstyle %}
<div data-section-type="pdp-section-5" class="product-section product-section-5 product-section-padding" id="nutritional_facts-2">
  <div class="">
    <div class="product-section-5-carousel">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'carousel' %}
            <div class="product-section-box">
              <div class="image-wrapper-ss">
                <img src="{{ block.settings.image | img_url: 'master'  }}" alt="" width="" height="">
              </div>
              <h5>{{ block.settings.heading }}</h5>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

{% liquid
  assign shape_dividers = section.blocks | where: "type", "shape_divider"
  for shape_divider in shape_dividers
    render 'block-shape-divider' with block: shape_divider, section: section
  endfor
%}
 
