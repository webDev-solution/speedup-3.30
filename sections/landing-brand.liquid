<div
  class="landing-brand hoilday-image-countdown-overlay brand-top-container-saturn text-scheme-text bg-scheme-background overflow-hidden {% unless style == 'inset' %}full-bleed-section{% endunless %}  {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %}"
  data-color-scheme="{{ section.settings.color_scheme }}"
  {% if customer %}
    data-customer="true"
    data-customer-id="{{customer.id}}"
  {% else %}
    data-customer="false"
  {% endif %}
>
  <div class="section-content  {% if style == 'inset' %}py-section-vertical-spacing{% endif %}">
    {% liquid
      assign image_class = 'w-full'
      if style == 'inset'
        assign image_class = image_classs | append: ' media-style'
      endif
      if block.settings.heading_size == 'heading-template'
        assign content_max_width = 'max-w-xl'
      else
        assign content_max_width = 'max-w-lg'
      endif
      if section.settings.display_content_below_image_on_mobile
        assign content_class = 'lg:grid lg:absolute lg:inset-0 lg:w-full lg:h-full'
        assign content_inset_class = 'max-w-site lg:py-5 lg:px-section mx-auto'
        assign card_container_class = 'lg:card-container'
        assign card_content_class = 'lg:card py-5 lg:py-10 lg:px-section'
        assign card_border_class = 'lg:card-border'
      else
        assign content_class = 'grid absolute inset-0 w-full h-full'
        assign content_inset_class = 'max-w-site py-5 px-section mx-auto'
        assign card_container_class = 'card-container'
        assign card_content_class = 'card py-5 py-10 px-section'
        assign card_border_class = 'card-border'
      endif
    %}

    <div class="relative z-10  lg:bg-transparent h-full">
      <div class="{% if crop contains 'slideshow' %}lg:h-full{% endif %} {% if style == 'inset' %}max-w-site px-5 lg:px-10 py-5 mx-auto{% endif %}">
        <div class="{{ crop }} {% if style == 'inset' %}media-style-container{% endif %}">
          {% if section.settings.image != blank %}
            {% if section.settings.image_mobile != blank %}
              <div class="hidden lg:block">
            {% endif %}
            {{
              section.settings.image
              | image_url: width: 2000
              | image_tag: sizes: '100vw', class: image_class, loading: 'lazy'
            }}
            {% if section.settings.image_mobile != blank %}
              </div>
            {% endif %}
            {% if section.settings.image_mobile != blank %}
              <div class="lg:hidden">
                {{
                  section.settings.image_mobile
                  | image_url: width: 1200
                  | image_tag: sizes: '100vw', class: image_class, loading: 'lazy'
                }}
              </div>
            {% endif %}
          {% else %}
            <div class="w-full {% unless height == 'natural' %}absolute top-0 left-0 right-0 bottom-0{% endunless %}">
              {{
                'lifestyle-1'
                | placeholder_svg_tag: 'block text-scheme-placeholder-foreground fill-current bg-neutral-100'
              }}
            </div>
          {% endif %}
        </div>
      </div>
      <div
        class="px-section py-section-vertical-spacing {{ content_class }} z-10  text-scheme-text {{ section.settings.place_content }} {{ section.settings.text_align }} {% if style == 'inset' %}max-w-site mx-auto{% endif %}"
      >
        {% capture content %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'text' %}
            <div class="rte text-theme-basic mt-5">
              {{ block.settings.richtext }}
            </div>
            {% when 'button' %}
            <div class="relative z-10 mt-5">
              {% if block.settings.cta_text_1 != blank %}
              <a class="inline-block push-btn" href="{{ block.settings.cta_url_1 }}"><span class="push-btn-surface" style="color: {{ block.settings.color }}; background-color: {{ block.settings.background_color }}">{{ block.settings.cta_text_1 }}</span></a>
              {% endif %}
            </div>
          {% endcase %}
        {% endfor %}
      {% endcapture %}

        <div class="{% if style == 'inset' %}{{ content_inset_class }}{% endif %}">
          {% unless section.settings.text_overlay_color != 'same_as_section'
            and section.settings.display_content_below_image_on_mobile == false
          %}
            <div class="{% unless section.settings.text_overlay_color == 'same_as_section' %}lg:hidden{% endunless %} {% if section.settings.display_on_card == true %}{{ card_container_class }}{% endif %} {{ content_max_width }}">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'title' %}
                    {% style %}
                      .lading-brand-title--{{ block.id }} {
                        color: {{ block.settings.color }};
                      }
                      .lading-brand-title--{{ block.id }} * {
                        margin: 0px;
                      }
                    {% endstyle %}
                    <h2 class="lading-brand-title lading-brand-title--{{ block.id }}" >
                      {% if request.path contains '/fr' and block.settings.title_fr != blank %}
                        {{ block.settings.title_fr }}
                      {% else %}
                        {{ block.settings.title }}
                      {% endif %}
                    </h2>
                {% endcase %}
              {% endfor %}
              <div class="break-words {% if section.settings.display_on_card == true %}{{ card_content_class }}{% endif %} ">
                {{ content }}
              </div>
              {% if section.settings.display_on_card and settings.card_show_border_on_shadow %}
                <div class="{{ card_border_class }}"></div>
              {% endif %}
            </div>
          {% endunless %}

          {% unless section.settings.text_overlay_color == 'same_as_section' %}
            <div
              class="{% unless section.settings.text_overlay_color != 'same_as_section' and section.settings.display_content_below_image_on_mobile == false %}hidden lg:block{% endunless %} {% if section.settings.display_on_card == true %}{{ card_container_class }} {% endif %}  {{ content_max_width }} text-scheme-text"
              data-color-scheme="{{ section.settings.text_overlay_color }}"
            >
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'title' %}
                    {% style %}
                      .lading-brand-title--{{ block.id }} {
                        color: {{ block.settings.color }};
                      }
                      .lading-brand-title--{{ block.id }} * {
                        margin: 0px;
                      }
                    {% endstyle %}
                    <h2 class="lading-brand-title lading-brand-title--{{ block.id }}" >
                      {% if request.path contains '/fr' and block.settings.title_fr != blank %}
                        {{ block.settings.title_fr }}
                      {% else %}
                        {{ block.settings.title }}
                      {% endif %}
                    </h2>
                {% endcase %}
              {% endfor %}
              <div class="break-words {% if section.settings.display_on_card == true %}{{ card_content_class }}{% endif %}">
                {{ content }}
              </div>
              {% if section.settings.display_on_card and settings.card_show_border_on_shadow %}
                <div class="{{ card_border_class }}"></div>
              {% endif %}
            </div>
          {% endunless %}
        </div>
      </div>
    </div>
    <!-- ************************************ -->
    <div class="absolute z-100 lg:bg-transparent brand-contents-saturn">
      {% if section.settings.top_logo_image != blank %}
        <div>
          <img src="{{ section.settings.top_logo_image | img_url: '2000x500'  }}" class="logo-image-saturn" />
        </div>
      {% endif %}
      <div>
        {% if section.settings.holiday_dash_image != blank %}
          {% if section.settings.holiday_dash_image_fr != blank %}
            {% if request.path contains '/fr' %}
              <img class="width-77vw-saturn brand-main-image-saturn" src="{{ section.settings.holiday_dash_image_fr |  img_url: '2000x2000' }}" />
            {% else %}
              <img class="width-77vw-saturn brand-main-image-saturn" src="{{ section.settings.holiday_dash_image |  img_url: '2000x2000' }}" />
            {% endif %}
          {% endif %}
        {% endif %}
      </div>
      {% if request.path contains '/pages/holiday-2025' %}
        <div class="px-section py-section-vertical-spacing z-10  text-scheme-text place-content-end-center text-center for-holiday-2025-saturn">
          <div class="">
              <div class="  max-w-lg">
                <div class="break-words  ">
                  <div class="rte text-theme-basic">
                    <p>
                      {% if request.path contains '/fr' %}
                        {{ section.settings.bottom_text_fr }}
                      {% else %}
                        {{ section.settings.bottom_text }}
                      {% endif %}
                    </p>
                  </div>
                </div>
              </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>
<div id="show-now-goodprotein"></div>

{%- liquid
  assign stickers = section.blocks | where: 'type', 'sticker'
  assign shape_dividers = section.blocks | where: 'type', 'shape_divider'
  for sticker in stickers
    render 'block-sticker' with block: sticker, section: section
  endfor
