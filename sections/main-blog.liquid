{%- paginate blog.articles by 6 -%}

{%- render 'collection-shape-defs',
  shape: section.settings.image_shape,
  section_id: section.id,
  item_count: 6
-%}

<section class="text-scheme-text bg-scheme-background relative overflow-hidden {% if section.settings.use_gradient_background %}bg-scheme-gradient{% endif %} " data-color-scheme="{{ section.settings.color_scheme | default: 'primary' }}" >

  <div class="section-content py-section-vertical-spacing px-section">
    {%- if section.settings.show_blog_title -%}
    <h1 class="text-center font-heading  heading-template heading-style {{ settings.heading_drop_shadow_style }}">{{ blog.title }}</h1>
    {%- endif -%}

  <div class="flex justify-between items-center" style="display: none;">
    <div class="flex flex-grow w-1/3  justify-start items-stretch">
    <button type="button" class="filters_tag btn disclosure-btn  border-b-text " aria-expanded="false" aria-controls="lang-list" aria-describedby="lang-heading" data-disclosure-toggle>
      Filters
      <span class="chevron-down inline-block ml-2 w-3 fill-current">
        {% render 'icon-chevron-down' %}
      </span>
      <span class="chevron-up inline-block ml-2 w-3 fill-current transform rotate-180">
        {% render 'icon-chevron-down' %}
      </span>
    </button>
    </div>
    <div class="flex flex-grow w-1/3 items-center justify-end">
      <form class="relative max-w-2xl block blog-search" action="/search" method="get" role="search">
      <label for="Search-{{ section.id }}" class="visually-hidden">
        {{ 'general.search.placeholder' | t }}
      </label>
      <input type="search"
            name="q"
            id="Search-{{ section.id }}"
            class="pr-12 placeholder-current input w-full"
            value="{{ search.terms | escape }}"
            placeholder="{{ 'general.search.placeholder' | t }}">
      <button class="absolute right-2 top-1/2 transform -translate-y-1/2 p-1" type="submit" class="button">
        <span class="inline-block w-5 h-5">{% render 'icon-search' %}</span>
        <span class="visually-hidden">{{ 'general.search.submit' | t }}</span>
      </button>
    </form>
    </div>
  </div>

    <div class="{% if section.settings.title != '' %}section-content-top-margin{% endif %}">
  
      {% if blog.all_tags.size > 0 and section.settings.show_tags %}
        <div class="relative flex justify-center filters" style="display: none;">
          <nav class="pb-5 lg:pb-10" role="navigation">
            <ul class="flex flex-wrap justify-center lg:justify-start -mt-2.5 -mx-2.5">
              <li class="inline-block px-1.5 mt-2.5">
                <a {% unless current_tags %}aria-current="page"{% endunless %} class="btn text-sm lg:text-base after:hidden {% if current_tags %}bg-scheme-secondary-background text-scheme-text shadow-secondary{% else %}bg-scheme-text text-scheme-text-overlay{% endif %}" href="{{ blog.url }}">
                  {{ 'blogs.sidebar.all_tags' | t }}
                </a>
              </li>
              {% for tag in blog.all_tags %}
                {% if current_tags contains tag %}
                  <li class="inline-block px-1.5 mt-2.5">
                    <a aria-current="page" class="btn text-sm lg:text-base after:hidden bg-scheme-text text-scheme-text-overlay" href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>
                  </li>
                {% else %}
                  <li class="inline-block px-1.5 mt-2.5">
                    <a class="btn text-sm lg:text-base after:hidden bg-scheme-secondary-background text-scheme-text shadow-secondary" href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </nav>
        </div>  
      {% endif %}

      <ul id="AjaxinateContainer" class="grid grid-cols-1 lg:grid-cols-12 gap-10">
        {% for article in blog.articles %}
          {%- liquid
            assign shape_id = section.id
            if section.settings.image_shape == 'blob'
              assign shape_id = section.id | append: '-' | append: forloop.index0
            endif
          -%}
          <li class="lg:col-span-4 {% if section.settings.display_on_card %}text-scheme-text card-container card-layout{% endif %}" {{ block.shopify_attributes }}>
            <div class="relative {% if section.settings.display_on_card %}card card-inner p-0{% endif %} text-left">
              {%- if article.image -%}
                <div class="mb-5 {% if settings.media_shadow_direction contains 'top' %}pt-media-shadow{% else %}pb-media-shadow{% endif %}">
                  <a class="blog-category" href="{{ blog.url }}"><h3>{{ blog.title }}</h3></a>
                  {%- render 'media-image',
                      media: article.image,
                      shape: section.settings.image_shape,
                      shape_id: shape_id,
                      is_card: section.settings.display_on_card,
                      crop: section.settings.crop,
                      container_id: section.id,
                      index: forloop.index0
                  -%}
                </div>
              {%- endif -%}
              <div class="blog-content pl-9 pr-9 pb-16 pt-2">
                <p class="font-body text-base mb-2.5 block">5 min read</p>
                <h2 class="font-heading heading-secondary">
                  <a href="{{ article.url }}">
                  {{ article.title }}
                  <span class="absolute top-0 left-0 w-full h-fullx z-10 block"></span>
                  </a>
                </h2>
                
                {%- if section.settings.blog_show_date -%}
                <time class="font-body text-base mt-2.5 block" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>
                {%- endif -%}
                {% if section.settings.blog_show_author %}
                <p class="font-body text-base mt-2.5 block">{{ 'blogs.article.by_author' | t: author: article.author }}</p>
                {% endif %}
    
                {% if section.settings.show_post_excerpt %}
                  <div class="rte mt-2.5">
                    {% if article.excerpt.size > 0 %}
                      {{ article.excerpt }}
                    {% else %}
                      <p>{{ article.content | strip_html | truncatewords: 40 }}</p>
                    {% endif %}
                  </div>
                {% endif %}
  
                {%- if section.settings.show_tags %}
                  <div class="mt-2.5">
                    <ul class="flex flex-wrap items-center justify-center">
                      {% for tag in article.tags %}
                        <li class="inline-block">
                          <a class="p-1 inline-block" href="{{ blog.url }}/tagged/{{ tag | handle }}">#{{ tag }}</a>{% unless forloop.last %}&nbsp;{% endunless %}
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                  {%- endif -%}
                  <p class="mt-5 read_more_btn" ><a href="{{ article.url }}">
                  Read more <svg clip-rule="evenodd" fill-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="m14.523 18.787s4.501-4.505 6.255-6.26c.146-.146.219-.338.219-.53s-.073-.383-.219-.53c-1.753-1.754-6.255-6.258-6.255-6.258-.144-.145-.334-.217-.524-.217-.193 0-.385.074-.532.221-.293.292-.295.766-.004 1.056l4.978 4.978h-14.692c-.414 0-.75.336-.75.75s.336.75.75.75h14.692l-4.979 4.979c-.289.289-.286.762.006 1.054.148.148.341.222.533.222.19 0 .378-.072.522-.215z" fill-rule="nonzero"/></svg>
                  </a></p>
                </div>
              </div>
            {% if section.settings.display_on_card and settings.card_show_border_on_shadow %}<div class="card-border"></div>{% endif %}
          </li>
          {% endfor %}
      </ul>
    </div>

  {% comment %}
    {%- liquid
      if paginate.pages > 1
        render 'pagination', paginate: paginate, anchor: ''
      endif
    -%}
{% endcomment %}

    <div id="AjaxinatePagination">
      {% if paginate.next %}
        <a class="inline-block push-btn" href="{{ paginate.next.url }}"><span class="push-btn-surface">Load More</span></a>
      {% endif %}
    </div>
    
  </div>

  {%- liquid
    for block in section.blocks
      case block.type
        when 'background_shape'
          render 'block-background-shape' with block: block, section: section
        when 'background_pattern'
          render 'block-background-pattern' with block: block, section: section, scheme: section.settings.color_scheme
      endcase
    endfor
  -%}
</section>
{%- endpaginate -%}

{%- liquid
  assign stickers = section.blocks | where: "type", "sticker" 
  assign shape_dividers = section.blocks | where: "type", "shape_divider" 
  for sticker in stickers
    render 'block-sticker' with block: sticker, section: section
  endfor
  for shape_divider in shape_dividers
    render 'block-shape-divider' with block: shape_divider, section: section
  endfor
-%}

 <style>
  #AjaxinatePagination {
        margin-top: 30px;
        text-align: center;
  }
</style>

<script>
  $(document).ready(function(){
    $(".filters_tag").click(function(){         
      $(".filters").toggle();
    });
  });
  document.addEventListener("DOMContentLoaded", function() {
    var endlessScroll = new Ajaxinate({
      container: '#AjaxinateContainer',
      pagination: '#AjaxinatePagination',
      method: 'click',
      offset: 1000
    });
  });
  
</script>

